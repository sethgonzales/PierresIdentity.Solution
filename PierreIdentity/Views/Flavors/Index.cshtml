@{
  Layout = "_Layout";
}

@using PierreIdentity.Models;

<h2>Flavors</h2>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Flavor flavor in Model)
    {
      <li class="lists">@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<div class="navlinks two-links">
  <p>@Html.ActionLink("Add New Flavors", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>