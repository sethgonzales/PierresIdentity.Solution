@{
  Layout = "_Layout";
}

@using PierreIdentity.Models;

<h2>Treats</h2>

@if (@Model.Count == 0)
{
  <h3>No treats have been created</h3>
}
else
{
  <ul>
  @foreach (Treat treat in Model)
    {
      <li class="lists">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}

<div class="navlinks two-links">
  <p>@Html.ActionLink("Add New Treat", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>